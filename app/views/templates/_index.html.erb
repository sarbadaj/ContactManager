<nav class="navbar navbar-default">
  <div class="row">
    <div class="pull-left col-md-3">
      <h4>Email Templates</h4>
    </div>
    <div class="pull-right col-md-3">
      <button class="btn btn-default nav">
        <%= link_to "Create Template", new_user_template_path(current_user.id), remote: true %>
      </button>
    </div>
  </div>
</nav>
<div>
  <% unless templates.blank? %>
    <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <th>Title</th>
      <th>Actions</th>
    </thead>
    <% templates.each do |template| %>
      <tr>
      <td><%=link_to template.title.humanize, user_template_path(template.user, template), remote: true %></td>
      <td>
      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_template_path(template.user, template), remote: true%>
       &nbsp;&nbsp;
      <%= link_to '<i class="fa fa-minus-circle"></i>'.html_safe, user_template_path(template.user, template), :method => :delete, data: {confirm: "You sure?"}%>
      </td>
      </tr>
    <%end%>
  </table>
  <br/>
  <% else %>
    <h2>You haven't created an email template yet.</h2>
  <% end %>
</div>
