<nav class="navbar navbar-default">
  <div class="row">
    <div class="pull-left col-md-3">
      <h4>People</h4>
    </div>
    <div class="pull-right col-md-3">
      <%= link_to "Add Person", new_user_person_path(current_user.id), :class => 'navbar-link btn btn-default', remote: true %>
    </div>
  </div>
</nav>
<div>
  <% unless people.blank? %>
    <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <th>Name</th>
      <th>Actions</th>
    </thead>
    <% people.each do |person| %>
      <tr>
      <td><%=link_to person.name.humanize, user_person_path(person.user, person), remote: true %></td>
      <td>
      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_person_path(person.user, person), remote: true%>
       &nbsp;&nbsp;
      <%= link_to '<i class="fa fa-minus-circle"></i>'.html_safe, user_person_path(person.user, person), :method => :delete, data: {confirm: "You sure?"}%>
      </td>
      </tr>
    <%end%>
  </table>
  <br/>
  <% else %>
    <h2>You donot have anyone in contacts yet.</h2>
  <% end %>
</div>
